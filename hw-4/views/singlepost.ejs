<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/post.css" />
  <title>
    <%= posts.title %>
  </title>
</head>

<body>
  <%- include('./partials/header.ejs') %>
    <div class="singlepost">
      <div class="postHeader">
        <div>
          <img src="<%= posts.user_icon %>" alt="User icon" />
        </div>
        <div>
          <span>
            <%= posts.post_date %>
          </span>
        </div>
      </div>
      <div class="postPicture">
        <img src="<%= posts.post_src %>" alt="Post picture" />
      </div>
      <div class="postBody">
        <div>
          <h2>
            <%= posts.title %>
          </h2>
        </div>
        <div class="content">
          <p>
            <%= posts.body %>
          </p>
        </div>
        <div class="likes">
          <h3>Likes <%= posts.likes %>
          </h3>
        </div>
      </div>
      <button class="deleteButton">
        <a class="delete" data-del="<%= posts.id %>">Delete</a>
      </button>
    </div>
    <%- include('./partials/footer.ejs') %>
      <script>
        const delreq = document.querySelector("a.delete");
        delreq.addEventListener("click", (e) => {
          const id = delreq.dataset.del;
          const endpoint = `/posts/${id}`;
          fetch(endpoint, {
            method: "DELETE",
          }).then((window.location.href = "/posts"));
        });
      </script>
</body>

</html>